{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "allowJs": false,
    "module": "ES2022",
    "moduleResolution": "Node",
    "target": "ES2021",
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "noUncheckedIndexedAccess": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"],
}
